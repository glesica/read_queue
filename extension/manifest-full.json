{
  "manifest_version": 2,

  "name": "Sooner or Later",
  "description": "Never lose track of something you wanted to read!",
  "author": "George Lesica",

  "applications": {
    "gecko": {
      "id": "soonerorlater@lesica.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "default_title": "Sooner or Later",
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "background.dart.js"
    ],
    "persistent": false
  },

  "icons": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
